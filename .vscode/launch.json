  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Current Source",
      "program": "${workspaceFolder}/node_modules/.bin/paperback",
      "args": [
        "test",
        "${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test All Sources",
      "program": "${workspaceFolder}/node_modules/.bin/paperback",
      "args": [
        "test",
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen"
    }
  ]
}